{
  "name": "@vgerasimovich/create-next-app-extended",
  "version": "1.2.2",
  "description": "An extended version of Create Next App with linters, styles adjustment, pre-commit and more",
  "repository": {
    "type": "git",
    "url": "https://github.com/vgerasimovich/create-next-app-extended.git"
  },
  "keywords": [
    "create-next-app",
    "create-next-app-extended",
    "cna",
    "cnax",
    "react",
    "next",
    "nextjs",
    "builder",
    "task runner"
  ],
  "author": "Vlad Gerasimovich <vlad.gerasimovich.micro@outlook.com>",
  "license": "MIT",
  "bugs": "https://github.com/vgerasimovich/create-next-app-extended/issues",
  "dependencies": {
    "next": "10.0.5",
    "normalize.css": "^8.0.1",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "sass": "^1.32.2",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-webpack-plugin": "^2.1.1"
  },
  "scripts": {
    "dev": "next",
    "start": "next",
    "build": "next build",
    "open": "next start"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead"
  ],
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "pretty-quick --pattern './src/**/*.{js,jsx}'",
      "eslint './src/**/*.{js,jsx}' --fix"
    ],
    "src/**/*.{scss,sass,css}": [
      "stylelint './src/**/*.{scss,sass,css}' --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && git add ."
    }
  }
}
